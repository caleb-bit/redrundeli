<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/app.css">
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script src="https://kit.fontawesome.com/d1b6c7d582.js" crossorigin="anonymous"></script>
    <title>Menu | Red Run Deli</title>
</head>

<body>
    <%- include('partials/navbar') %>
    <h2>Menu</h2>
    <!-- <p>Select a category</p> -->
    <div class="grid-container">
        <% for (let category of categories){%>
        <form class="form" action="/menu/<%=category._id%>">
            <button class="category-btn"><strong><%=category.name.toUpperCase()%></strong> <br>
                <img class="food-img" src="<%=category.img%>" alt="<%=category.name%>">
            </button>
        </form>
        <% }%>
    </div>
    <%- include('partials/footer') %>